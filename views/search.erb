
<article class="wrapper">
<h2>Search</h2>
  <div class="search">
    <form action="/search" method="get">
      <input placeholder="Search Group Name" type="text" name="userInput"/>
      <input type="submit" name="" value="Search"/>
    </form>

    <form action="/search" method="get">
      <input placeholder="Search City" type="text" name="userInputcity"/>
      <input type="submit" name="" value="Search"/>
    </form>

    <form action="/search" method="get">
      <input placeholder="Search Day" type="text" name="userInputday"/>
      <input type="submit" name="" value="Search"/>
    </form>
  </div>

  <div class="result">
    <h3>Your search results</h3>
      <% if params["userInput"] && @result.length > 0 %>
        <a href='<%= "/groups/#{@result.first.id}" %>'><%= @result.first.name %></a>
        <a href='<%= "/groups/#{@result.first.id}" %>'><%= @result.first.city %></a>
        <a href='<%= "/groups/#{@result.first.id}" %>'><%= @result.first.day_time %> - Visit Page</a>
      <% end %>
      <% if params["userInput"] && @result.length == 0 %>
        <p><%= "Sorry no groups exist" %></p>
        <% end %>
      <% if params["userInputcity"] && @resultcity.length > 0 %>
        <a href='<%= "/groups/#{@resultcity.first.id}" %>'><%= @resultcity.first.name %></a>
        <a href='<%= "/groups/#{@resultcity.first.id}" %>'><%= @resultcity.first.city %></a>
        <a href='<%= "/groups/#{@resultcity.first.id}" %>'><%= @resultcity.first.day_time %> - Visit Page</a>
      <% end %>
      <% if params["userInputcity"] && @resultcity.length == 0 %>
        <p><%= "Sorry no groups exist" %></p>
      <% end %>
      <% if params["userInputday"] && @resultday.length > 0 %>
        <a href='<%= "/groups/#{@resultday.first.id}" %>'><%= @resultday.first.name %></a>
        <a href='<%= "/groups/#{@resultday.first.id}" %>'><%= @resultday.first.city %></a>
        <a href='<%= "/groups/#{@resultday.first.id}" %>'><%= @resultday.first.day_time %> - Visit Page</a>
      <% end %>
      <% if params["userInputday"] && @resultday.length == 0 %>
        <p><%= "Sorry no groups exist" %></p>
      <% end %>
  </div>
  <form action="/search" method="get">
    <button>Refresh page</button>
  </form>
</article>
